generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  phone       String
  logo        String?
  password    String
  services    Service[]
  employees   User[]

  @@map("businesses")
}

model Service {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  business    Business      @relation(fields: [businessId], references: [id])
  businessId  Int
  appointment Appointment[]

  @@map("services")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  phone       Int
  password    String
  type        UserType      @default(CLIENT)
  business    Business?     @relation(fields: [businessId], references: [id])
  businessId  Int?
  appointment Appointment[]

  @@map("users")
}

enum UserType {
  CLIENT
  EMPLOYEE

  @@map("user_types")
}

model Appointment {
  id         Int               @id @default(autoincrement())
  dateTime   DateTime
  service    Service           @relation(fields: [serviceId], references: [id])
  serviceId  Int
  client     User?             @relation(fields: [clientId], references: [id])
  clientId   Int?
  status     AppointmentStatus @default(PENDING)
  createdAt  DateTime          @default(now())
  businessId Int

  @@map("appointments")
}

enum AppointmentStatus {
  PENDING
  CANCELLED
  COMPLETED

  @@map("appointments_status")
}
